package templates

templ suggestion() {
    <form class="suggestion-form" onsubmit="handleSuggestion(event)">
        <input 
            type="text" 
            class="suggestion-input" 
            placeholder="Enter a word you'd like to see in the game..."
            required
        >
        <button type="submit" class="suggestion-button">
            Send Suggestion
        </button>
    </form>
}
